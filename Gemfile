source "https://rubygems.org"

# Jekyll 依赖
gem "jekyll", "~> 4.3"
gem "kramdown", "~> 2.4"
gem "rouge", "~> 4.2"

# Jekyll 插件
gem "jekyll-feed", "~> 0.12"
gem "jekyll-seo-tag", "~> 2.8"
gem "jekyll-sitemap", "~> 1.4"
gem "jekyll-paginate", "~> 1.1"

# Windows 平台兼容性
gem "wdm", "~> 0.1", platforms: [:mingw, :x64_mingw, :mswin]

# 注意：Cloudflare Pages 不需要 github-pages gem
